    }

    // ===== MESSAGING SYSTEM =====
    match /chats/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /messages/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /chat_participants/{document} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // ===== DOKUMENT-MANAGEMENT-SYSTEM =====
    
    // Projekt-Dokumente: project_documents/{documentId}
    match /project_documents/{documentId} {
      // Erstellen: Nur authentifizierte Benutzer
      allow create: if request.auth != null;
      
      // Lesen: Alle authentifizierten Benutzer
      allow read: if request.auth != null;
      
      // Aktualisieren: Nur der Uploader oder Admin
      allow update: if request.auth != null 
                    && (resource.data.uploadedBy == request.auth.uid);
      
      // LÃ¶schen: Nur der Uploader oder Admin
      allow delete: if request.auth != null 
                    && (resource.data.uploadedBy == request.auth.uid);
    }
    
    // Dokument-Kategorien: document_categories/{categoryId}
    match /document_categories/{categoryId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // Dokument-Berechtigungen: document_permissions/{permissionId}
    match /document_permissions/{permissionId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /{document=**} {
      allow read, write: if request.auth.token.email.matches("firebase@flutterflow.io");
    }

    // Security rules updated 17.08.2025
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2025, 6, 2);
    }
  }
